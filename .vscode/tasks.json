{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Client",
			"type": "shell",
			"command": "dotnet run",
			"options": {
				"cwd": "${workspaceFolder}/screenshot-client/ScreenshotClient"
			},
			"group": {
				"isDefault": true,
				"kind": "build"
			},
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Backend Start",
			"type": "shell",
			"command": "dotnet run",
			"options": {
				"cwd": "${workspaceFolder}/ai-service/AiService"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile"
		}
	]
}
